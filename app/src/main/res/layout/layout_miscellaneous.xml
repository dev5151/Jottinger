<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_miscellaneous"
        android:orientation="vertical"
        app:layout_behavior="@string/bottom_sheet_behavior">


        <TextView
            android:id="@+id/tv_miscellaneous"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="@font/ubuntu_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Miscellaneous"
            android:textColor="@color/colorWhite"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <View
                    android:id="@+id/noteColorDefault"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/background_note_color_default" />

                <ImageView
                    android:id="@+id/img_color_default"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:backgroundTint="@color/colorWhite"
                    android:padding="10dp"
                    android:src="@drawable/ic_tick" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <View
                    android:id="@+id/noteColorYellow"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/backgorund_note_color_yellow" />

                <ImageView
                    android:id="@+id/img_color_yellow"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:backgroundTint="@color/colorWhite"
                    android:padding="10dp" />

            </FrameLayout>


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <View
                    android:id="@+id/noteColorRed"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/background_note_color_red" />

                <ImageView
                    android:id="@+id/img_color_red"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:backgroundTint="@color/colorWhite"
                    android:padding="10dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <View
                    android:id="@+id/noteColorBlue"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/background_note_color_blue" />

                <ImageView
                    android:id="@+id/img_color_blue"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:backgroundTint="@color/colorWhite"
                    android:padding="10dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <View
                    android:id="@+id/noteBlack"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/background_note_color_black" />

                <ImageView
                    android:id="@+id/img_color_black"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:backgroundTint="@color/colorWhite"
                    android:padding="10dp" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_medium"
                android:text="Pick  a Color"
                android:textColor="@color/colorWhite"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAddImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_add_image"
                app:tint="@color/colorIcons"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/ubuntu_medium"
                android:includeFontPadding="false"
                android:text="Add Image"
                android:textColor="@color/colorIcons"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAddUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_add_url"
                app:tint="@color/colorIcons"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/ubuntu_medium"
                android:includeFontPadding="false"
                android:text="Add URL"
                android:textColor="@color/colorIcons"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
</layout>